<turbo-frame id="reservacion-form">
	<div data-controller="confirmacion" class="max-w-3xl m-auto">

		<div class="mb-5">
			{{ component('alert', {class: 'error', icon: 'error', text: 'error_pdf' | trans({'BOLETO' :  reservacion.getBoletoTicketId})})}}
		</div>

		{% if error is defined %}
			<div class="mb-5">
				{{ component('alert', {class: 'error', icon: 'error', text: 'error_pdf' | trans({'BOLETO' :  reservacion.getBoletoTicketId})})}}
			{% else %}
				<div class="mb-5 block md:flex items-center gap-5">
					{{ component('alert', {class: 'warning mb-5 md:mb-0', icon: 'notification_important', text: 'Si no se ha <span class="font-semibold">descargado el boleto</span> autom√°ticamente pulse el boton para descargarlo.' | trans}) }}
					<div class="flex justify-center md:justify-start">
						{{ component('button_link', {text: 'Descargar boleto' | trans, icon: {right: true, name: 'file_download'}, link: path('pdf', {reservacion: reservacion.id}), attr: 'data-turbo=false data-confirmacion-target=pdf_link'}) }}
					</div>
				</div>
			{% endif %}
		</div>
	</turbo-frame>
