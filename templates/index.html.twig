{% extends 'base.html.twig' %}

{% block title %}Hello AppController!
{% endblock %}

{% block body %}


	<div class="relative flex justify-center items-center banner">

		{{ component('slider')}}
		{% include 'reservacion/reservar.html.twig' %}
	</div>


	<section class="relative pt-16 pb-32 flex content-center items-center justify-center" style="min-height: 75vh;">

		<div class="container relative mx-auto flex items-center">
			<div>
				<div class="tracking-wider text-center font-medium mb-5 text-3xl lg:text-5xl empresa-nombre">{{'Nuestros Servicios' | trans}}</div>
				<div class="flex flex-wrap justify-center">
					{% for key, servicio in servicios %}
						<div class="w-full md:w-4/12 lg:w-3/12 text-center p-4">
							<a href="{{path('servicio', {'_fragment': servicio.slug})}}">
								<div class="bg-white w-full px-4 py-8 shadow-lg rounded-lg max-h-[366px]">
									<div class="grid gap-5">
										<picture class="shadow-lg max-w-[150px] m-auto">
											<source srcset="{{ servicio.imagen.path | imagine_filter('imagen_servicio_inicio') }}" type="image/webp">
											<source srcset="{{ servicio.imagen.path | imagine_filter('imagen_servicio_inicio') }}" type="image/jpeg">
											<img class="rounded-md" src="{{ servicio.imagen.path | imagine_filter('imagen_servicio_inicio') }}" alt="{{servicio.imagen.nombre}}">
										</picture>
										<h6 class="text-lg font-semibold">{{servicio.nombre}}</h6>
										<div class="text-ellipsis overflow-hidden h-36">
											{{servicio.texto | raw}}
										</div>
									</div>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>>
			</div>
		</div>

	</section>

	<section class="pb-20 relative block bg-slate-400">
		<div class="bottom-auto top-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden -mt-20" style="height: 80px;">
			<svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveaspectratio="none" version="1.1" viewbox="0 0 2560 100" x="0" y="0">
				<polygon class="text-slate-400 fill-current" points="2560 0 2560 100 0 100"></polygon>
			</svg>
		</div>
		<div class="container mx-auto px-4 lg:pt-24">
			<div class="contaidner mx-auto px-4">
				<div class="flex flex-wrap">
					<div class="lg:pt-12 pt-6 w-full md:w-4/12 px-4 text-center">
						<div class="mb-5 font-semibold text-xl text-center text-gray-700">
							{{'Clase Platino' | trans}}
						</div>
						<div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">

							<div class="aspect-w-16 aspect-h-9">
								<iframe class="shadow-2xl rounded-lg w-full" src="https://www.youtube.com/embed/J4G7FWdfKEc" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
							</div>
						</div>
					</div>
					<div class="w-full md:w-4/12 px-4 text-center">
						<div class="mb-5 font-semibold text-xl text-center text-gray-700">
							{{'Clase Oro' | trans}}
						</div>
						<div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
							<div class="aspect-w-16 aspect-h-9">
								<iframe class="shadow-2xl rounded-lg w-full" src="https://www.youtube.com/embed/i96AR2v29U0" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
							</div>
						</div>
					</div>
					<div class="pt-6 w-full md:w-4/12 px-4 text-center ">
						<div class="mb-5 font-semibold text-xl text-center text-gray-700">
							{{'Excursiones' | trans}}
						</div>
						<div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
							<div class="aspect-w-16 aspect-h-9">
								<iframe class="shadow-2xl rounded-lg w-full" src="https://www.youtube.com/embed/FHgIZX4UmAw" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="flex flex-wrap text-center justify-center">
				<div class="w-full lg:w-6/12 px-4">
					<p class="text-lg leading-relaxed mt-4 mb-4 font-medium">
						{{'Estamos en la mejor disposición de brindarle un servicio con calidad y elegancia a un cómodo precio. Nuestra experiencia en transporte de pasajeros es por mas de 50 años. La calidad de nuestro servicio es el resultado de su preferencia.' | trans}}
					</p>
				</div>
			</div>
		</div>
	</section>

	<section id="contacto" class="relative block bg-slate-600 py-20 pb-">
		<div class="bottom-auto top-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden -mt-20" style="height: 80px; transform: rotate(180deg) rotateX(180deg);">
			<svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveaspectratio="none" version="1.1" viewbox="0 0 2560 100" x="0" y="0">
				<polygon class="text-slate-600 fill-current" points="2560 0 2560 100 0 100"></polygon>
			</svg>
		</div>
		<div class="container mx-auto px-4">
			<div class="flex flex-wrap justify-center">
				<div class="w-full md:w-6/12 px-4">
					<div class="relatidve shadow-lg rounded-lg bg-gray-300">
						<div class="container mx-auto p-10">
							<h4 class="text-2xl font-semibold">{{'Desea contactarnos?' | trans}}</h4>
							<p class="leading-relaxed mt-1 mb-4 text-gray-600">
								{{'Complete este formulario y nos pondremos en contacto con usted en 24 horas.' | trans}}
							</p>
							{{ render_esi(controller('App\\Controller\\AppController::contactoForm')) }}
						</div>


					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
